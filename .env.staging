# Environment Configuration - TSport Staging Instance

# Staging Environment
NODE_ENV=staging

# Server Ports - Staging configuration
RTMP_PORT=1936
HTTP_PORT=8889
WEB_PORT=3001

# Server Configuration
SERVER_HOST=localhost
MEDIA_ROOT=./public/streams

# Stream Settings
CHUNK_SIZE=60000
GOP_CACHE=true
PING_INTERVAL=30
PING_TIMEOUT=60

# Authentication (enabled for staging)
ENABLE_AUTH=true
STREAM_KEY_VALIDATION=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG=true

# TSport Back-office Integration
APP_URL=http://tsport-staging.localhost
BACKOFFICE_API_URL=http://tsport-staging.localhost
BACKOFFICE_API_KEY=staging-api-key-here

# Multiple Instance Support
INSTANCE_NAME=staging
INSTANCE_ID=3

# Valid stream keys for staging (comma-separated)
VALID_STREAM_KEYS=staging_test,demo_stream,qa_stream
